    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python Virtual Environment + Maturin Setup",
            "type": "shell",
            "command": "rm -Rf .venv; python3 -m venv .venv; source .venv/bin/activate; pip3 install maturin patchelf",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": true,
                "revealProblems": "onProblem"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}